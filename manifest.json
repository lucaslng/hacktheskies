{
  "name": "News Article Scraper",
  "description": "Scrape content from news articles",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "UI/background.js"
  },
  "permissions": ["sidePanel", "activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "side_panel": {
    "default_path": "UI/sidepanel.html"
  }
}
