{
  "manifest_version": 3,
  "name": "Placeholder",
  "description": "Placeholder",
  "version": "1.0",

  "permissions": ["activeTab", "scripting", "storage"],

  "host_permissions": ["<all_urls>"],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Neutralize article"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscript.js"]
    }
  ]
}
